<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%level] %date{ISO8601} %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="SPLUNK" class="com.splunk.logging.HttpEventCollectorLogbackAppender">
        <url>https://localhost:8088</url>
        <token>0f69084f-e1e1-4122-843e-975f89d0b158</token>
        <disableCertificateValidation>true</disableCertificateValidation>
        <messageFormat>json</messageFormat>
        <layout class="grant.guo.ideas.logging.LogbackJsonLayout">
            <logPayloadDataClassname>grant.guo.ideas.logging.SampleLogEntity</logPayloadDataClassname>
            <logPayloadDataKey>content</logPayloadDataKey>
            <jsonFormatter
                    class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                <prettyPrint>true</prettyPrint>
            </jsonFormatter>
            <timestampFormat>yyyy-MM-dd' 'HH:mm:ss.SSS</timestampFormat>
        </layout>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="SPLUNK" />
    </root>
</configuration>